<mvc:View xmlns:vk="sap.ui.vk" xmlns:core="sap.ui.core" xmlns:layout="sap.ui.layout" xmlns:form="sap.ui.layout.form" controllerName="uiapp.project1.controller.Emp1"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true" 	xmlns:l="sap.ui.layout"
    xmlns="sap.m">
    	<App >
            <pages>
                <Page >
                    <Toolbar >
                       <Image src="https://www.signiwis.com/images/logo.jpg" width="100px" id="empPageImage"></Image>
                        <ToolbarSpacer ></ToolbarSpacer>
                        <Button icon="sap-icon://bell"> <customData>
						<BadgeCustomData id="notify"
							key="badge"
							value=""/>
					</customData></Button>
                        <Button text="{i18n>profile}" icon="sap-icon://customer" press="userProfile"></Button>
                        <Button text="{i18n>logo}" icon="sap-icon://log" press="onEmpLogout"></Button>
                        
                    </Toolbar>
                    
                    <l:Splitter
		id="mainSplitter"
		height="500px"
		width="100%">
		<List id="requestList" headerText="Employees for Review" selectionChange="onPress222" mode="SingleSelectMaster" items="{requestData>}">
            <items>
                <ObjectListItem title="{requestData>name}"></ObjectListItem>
            </items>
            <layoutData>
				    <l:SplitterLayoutData size="100%" id="hhh" />
			</layoutData>
        </List>
        <form:SimpleForm editable="true" id="empForm">
            <Label text="Name"></Label>
            <Input value="{requestData>name}" enabled="false" id="rEmp"></Input>
             <Label text="Designation"></Label >
            <Input value="{requestData>designation}" enabled="false"></Input>
             <Label text="ContactNo"></Label>
            <Input value="{requestData>contactNo}" enabled="false"></Input>
            <Label text="Mail Id"></Label>
            <Input value="{requestData>mailId}" enabled="false"></Input>
             <Label text="Emp ID"></Label>
            <Input value="{requestData>empId}" enabled="false"></Input>
            <Label ></Label>
            <Button text="Review" press="onPressReview">
             <layoutData>
				    <l:SplitterLayoutData size="100%" />
			</layoutData>
            </Button>
        </form:SimpleForm>
            
        

