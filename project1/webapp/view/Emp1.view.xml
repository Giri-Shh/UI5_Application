        </form:SimpleForm> -->

        
		
	</l:Splitter>
    <footer>
        <Toolbar >
            <Text text="Signiwis Technoloies Pvt Ltd"></Text>
            <ToolbarSpacer ></ToolbarSpacer>
            <Label text="CONTACT: "></Label>
            <Text text="080-6789965"></Text>
        </Toolbar>
    </footer>
	
                </Page>
            </pages>
        </App>
    
</mvc:View>
